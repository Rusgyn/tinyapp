<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <!-- Login section -->

      <div class="col-md-3 offset-md-7">
        
        <% if(username) { %> <!-- Guard. Username === true (logged-in), then display the username -->
          <p class = "col-md-8 offset-md-4" style="margin: 1em; color:indigo">Logged In as:&nbsp&nbsp<strong><%= username %></strong></p> <!--&nbsp is whitespace-->
        <% } else { %>  <!-- Guard. Username === False (not logged-in), then display the login input/form -->
          <form class="form-inline" action="/login" method="POST">
            <input required class="form-control mr-sm-3" 
            type="text"
            name="username"
            placeholder="Username"
            style="width: 200px; margin: 1em">
            <input class="btn btn-outline-dark" type="submit" value="Login"/>
          </form>
        <% } %>

      </div>
      <!-- End login section -->
       
    </div>

  </nav>
</header>